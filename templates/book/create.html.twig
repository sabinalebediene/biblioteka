{% extends 'base.html.twig' %}

{% block title %}Create new Book
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-8">
				<div class="card">
					<div class="card-header">
						<h1>Create new Book âœ…</h1>
					</div>

					<div class="card-body">
						<form action="{{path('book_store')}}" method="POST">
							<div class="form-group">
								<input type="text" name="book_title" class="form-control">
								<small class="form-text text-muted">Book title</small>
							</div>
							<div class="form-group">
								<input type="text" name="book_isbn" class="form-control">
								<small class="form-text text-muted">Book ISBN</small>
							</div>
							<div class="form-group">
								<input type="text" name="book_pages" class="form-control">
								<small class="form-text text-muted">Book pages</small>
							</div>
							<div class="form-group">
								<textarea name="book_about" id="summernote"></textarea>
								<small class="form-text text-muted">About</small>
							</div>

							<select name="book_author_id">
								<option value="0">Select author</option>
								{% for author in authors %}
									<option value="{{author.id}}">{{author.name}}
										{{author.surname}}</option>
								{% endfor %}
							</select>
							<button type="submit" class="btn  btn-primary">Add new Book</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
