{% extends 'base.html.twig' %}

{% block title %}Create new Book{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
    <h1>Create new Book âœ…</h1>
    <form action="{{path('book_store')}}" method="POST">
        Title: <input type="text" name="book_title">
        ISBN: <input type="text" name="book_isbn">
        Pages: <input type="text" name="book_pages">
        About: <textarea name="book_about"></textarea>
        <select name="book_author_is">
            {% for author in authors %}
            <option value="{{author.id}}">{{author.name}} {{author.surname}}</option>
            {% endfor %}
        </select>
        <button type="submit">Add new Book</button>
    </form>
{% endblock %}